{
  "name": "cicd-system",
  "version": "1.0.0",
  "description": "Standalone CI/CD system with webhook server, deployment scripts, and notification system for automated development workflows",
  "type": "module",
  "main": "src/webhook-server.js",
  "scripts": {
    "start": "node src/webhook-server.js",
    "start:multi": "node src/webhook-server-multi.js",
    "start:refactored": "node src/webhook-server-refactored.js",
    "deploy": "node src/deploy-production.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:legacy": "node tests/test-basic-functionality.js",
    "health-check": "node src/claude-startup-checklist-complete.js",
    "pid-manager": "node src/pid-manager.js",
    "diagnose": "node src/diagnose-database.js",
    "fix-schema": "node src/fix-database-schema.js"
  },
  "keywords": [
    "ci-cd",
    "webhook",
    "deployment",
    "automation",
    "ngrok"
  ],
  "author": "Talento Development Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  }
}
